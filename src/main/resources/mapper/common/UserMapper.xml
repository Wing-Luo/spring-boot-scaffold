<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="com.example.demo.dao.UserDao">

    <resultMap id="RM_User" type="com.example.demo.model.User">
        <result property="id" column="id"/>
        <result property="uname" column="uname"/>
        <result property="password" column="password"/>
        <result property="status" column="status"/>
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        <![CDATA[
        user.id, user.uname, user.password, user.status
        ]]>
    </sql>

    <!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO user (
        <set>
                <if test="id != null">
                    user.id ,
                </if>
                <if test="uname != null">
                    user.uname ,
                </if>
                <if test="password != null">
                    user.password ,
                </if>
                <if test="status != null">
                    user.status 
                </if>
        </set>
        ) VALUES (
        <set>
                <if test="id != null">
                    #{id},
                </if>
                <if test="uname != null">
                    #{uname},
                </if>
                <if test="password != null">
                    #{password},
                </if>
                <if test="status != null">
                    #{status}
                </if>
        </set>
        )
    ]]>
    </insert>

    <!-- batch-insert-Object -->
    <insert id="insertBatch" useGeneratedKeys="true" parameterType="java.util.List">
        INSERT INTO user (
                user.id ,
                user.uname ,
                user.password ,
                user.status 
        ) VALUES
        <foreach collection="list" item="item" index="index" separator="," >
            (
                #{item.id},
                #{item.uname},
                #{item.password},
                #{item.status}
               )
        </foreach>
    </insert>

    <sql id="update_sql">
        <set>
                    <if test="uname != null and uname != ''">
                     user.uname = #{uname} ,
                    </if>
                    <if test="password != null and password != ''">
                     user.password = #{password} ,
                    </if>
                    <if test="status != null">
                        user.status = #{status} 
                    </if>

        </set>
    </sql>

    <update id="update" >
            UPDATE  user
        <include refid="update_sql" />
            WHERE
                    user.id = #{id} 
    </update>

    <delete id="delete">
    <![CDATA[
        DELETE FROM user WHERE
        user.id = #{id} 
    ]]>
    </delete>

    <delete id="delete_batch_list">
        DELETE FROM user WHERE id IN
        <foreach item="item" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <select id="getById" resultMap="RM_User">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM user 
            WHERE 
                user.id = #{id} 
        ]]>
    </select>

    <sql id="leftJoin_on">
        <if test="leftJoinDTO != null">
            left join ${leftJoinDTO.leftTableName} on ${leftJoinDTO.leftTableName}.${leftJoinDTO.leftColumn} = ${leftJoinDTO.rightTableName}.${leftJoinDTO.rightColumn}
        </if>
    </sql>
    <sql id="findPage_where">
        <!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
        <where>
            <if test="leftJoinDTO != null and leftJoinDTO.targetValue !=null">
                AND ${leftJoinDTO.leftTableName}.${leftJoinDTO.targetColumn} = ${leftJoinDTO.targetValue}
            </if>
            <if test="id != null">
                AND user.id = #{id}
            </if>
            <if test="uname != null and uname !=''">
                <choose>
                    <when test="selectType['uname']==1">
                        AND user.uname like CONCAT('%', #{uname}, '%')
                    </when>
                    <otherwise>
                        AND user.uname = #{uname}
                    </otherwise>
                </choose>
            </if>
            <if test="password != null and password !=''">
                <choose>
                    <when test="selectType['password']==1">
                        AND user.password like CONCAT('%', #{password}, '%')
                    </when>
                    <otherwise>
                        AND user.password = #{password}
                    </otherwise>
                </choose>
            </if>
            <if test="statusExclude != null">
                AND user.status != #{statusExclude}
            </if>
            <if test="status != null">
                AND user.status = #{status}
            </if>
            <if test="ids != null and ids !=''">
                AND id in (${ids})
            </if>
        </where>
    </sql>

    <select id="findPage_count" resultType="long">
        SELECT count(*) FROM user
        <include refid="leftJoin_on"/>
        <include refid="findPage_where"/>
    </select>

    <select id="selectListByCondition" resultMap="RM_User">
        SELECT <include refid="columns" />
        FROM user
        <include refid="leftJoin_on"/>
        <include refid="findPage_where"/>

        <if test="sortStr != null and sortStr != ''">
            ORDER BY ${sortStr}
        </if>
        <if test="offset != null and limit != null">
            LIMIT ${offset}, ${limit}
        </if>
        <if test="offset == null and limit != null">
            LIMIT ${limit}
        </if>
    </select>

    <select id="selectIdsByCondition" resultType="long">
        SELECT id
        FROM user
        <include refid="findPage_where"/>

        <if test="sortStr != null and sortStr != ''">
            ORDER BY ${sortStr}
        </if>
    </select>

    <select id="selectBatchByIds" resultMap="RM_User">
        SELECT <include refid="columns" />
        FROM user
        WHERE id IN
        <foreach item="item" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

</mapper>

